<Page x:Class="bibl.Pages.LoansPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bibl.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoansPage">

    <Grid>
        <DataGrid x:Name="LoansGrid" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Книга" Binding="{Binding Books.Title}" Width="*"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Books.Author}" Width="*"/>
                <DataGridTextColumn Header="Читатель" Binding="{Binding Abonement.Readers.FullName}" Width="*"/>
                <DataGridTextColumn Header="Дата выдачи" Binding="{Binding LoanDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="120"/>

                <!-- Кнопка возврата -->
                <DataGridTemplateColumn Header="Действие" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Вернуть" 
                                    Click="ReturnButton_Click"
                                    Tag="{Binding ID}"
                                    Margin="2" Padding="5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>